<!DOCTYPE html>
<html>
<head>
    <title>Hello</title>
     <link rel="stylesheet" type="text/css" href="css/app.css">
     <script src="js/core.js"></script>
     <script src="js/app.js"></script>
</head>
<body>
    <div class="uk-container uk-container-center main-container">
        <div class="uk-grid">
            <div class="uk-width-1-2 uk-container-center">
                <form class="uk-form" action="/" method="POST">
                    <div class="uk-form-row">
                        <label class="uk-form-label" for="message-input">Message</label>
                        <div class="uk-form-controls">
                            <textarea class="uk-width-1-1" name="message" placeholder="Text input" id="message-input"  rows="3"></textarea>
                        </div>  
                    </div>
                    <div class="uk-form-row">
                        <input type="submit" class="uk-button">
                    </div>
                </form>

                <hr>

                  
                <ul class="uk-list uk-list-line">
                    <% for msg in @msgs : %>
                        <li>
                           <div class="uk-article">
                                <div class="date uk-article-meta">
                                    <span data-uk-tooltip title="<%- msg.createdd %>"><%= msg.created_at %></span>
                                    <a href="/msg/<%= msg.id %>" class="del-msg uk-icon-hover uk-icon-trash-o" data-uk-tooltip title="Delete" ></a>
                                    <a href="#edit-msg" data-msgid="<%= msg.id %>" class="del-msg uk-icon-hover uk-icon-edit" data-uk-tooltip title="Edit" data-uk-modal></a>
                                </div>
                                <p class="uk-article-lead"><%= msg.text %></p>
                            </div>
                        </li>
                    <% end %>  
                </ul>
            </div>
        </div>
    </div>


    <div id="edit-msg" class="uk-modal">
    <div class="uk-modal-dialog">
        <a class="uk-modal-close uk-close"></a>
        <form class="uk-form" action="/msg/edit/" id="update-message-form" method="POST">
            <input type="hidden" name="id" value="">
            <div class="uk-form-row">
                <label class="uk-form-label" for="message-edit">Message</label>
                <div class="uk-form-controls">
                    <textarea class="uk-width-1-1" name="message" placeholder="Text input" id="message-edit"  rows="3"></textarea>
                </div>  
            </div>
            <div class="uk-form-row">
                <input type="submit" class="uk-button" value="Save">
            </div>
        </form>
    </div>
</div>
</body>
</html>